<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {# Derived values: prefer seo_title, then title; prefer description; build absolute URL from site.url if available #}
  {% set seo_title = seo_title or title %}
  {% set seo_description = description or "Big Boy Bread — a tasty, vibrant bread joint with Portland soul." %}
  {% set site_url = (site and site.url) or (collections and collections.site and collections.site.url) or "" %}

  <title>{{ seo_title }} — Big Boy Bread</title>
  <meta name="description" content="{{ seo_description }}">
  <link rel="canonical" href="{% if site_url %}{{ site_url }}{{ url }}{% else %}{{ url }}{% endif %}">
  <meta property="og:locale" content="en_US">
  <meta property="og:site_name" content="Big Boy Bread">
  <meta property="og:title" content="{{ seo_title }}">
  <meta property="og:description" content="{{ seo_description }}">
  {% if page.image or image %}
    {% set og_image = page.image or image %}
    {% set og_image_str = og_image|string %}
    {% if og_image_str.indexOf('http') == 0 %}
      <meta property="og:image" content="{{ og_image_str }}">
    {% else %}
      <meta property="og:image" content="{% if site_url %}{{ site_url }}{{ og_image_str }}{% else %}{{ og_image_str }}{% endif %}">
    {% endif %}
  {% endif %}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ seo_title }}">
  <meta name="twitter:description" content="{{ seo_description }}">
  <meta name="color-scheme" content="light dark">
  <link rel="stylesheet" href="/assets/styles.css">
  <link rel="icon" type="image/png" href="/assets/uploads/b_boy_logo100x100.png">
  {# JSON-LD LocalBusiness structured data. Fill telephone/address in `src/_data/site.json`. #}
  <script type="application/ld+json">
  {{ {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": site.name or "Big Boy Bread",
    "url": site.url,
    "telephone": site.telephone or "",
    "image": (site.url + (page.image or site.image)) if (site.url and (page.image or site.image)) else (page.image or site.image or ""),
    "address": {
      "@type": "PostalAddress",
      "streetAddress": site.address.streetAddress or "",
      "addressLocality": site.address.addressLocality or "",
      "addressRegion": site.address.addressRegion or "",
      "postalCode": site.address.postalCode or ""
    }
  } | dump(2) }}
  </script>
</head>
<body>
  <a class="skip-link" href="#main">Skip to content</a>
  <header class="site-header" role="banner">
    <div class="topbar wrap">
      <a href="/menu/" class="brand">Bread Menu</a>
      <nav class="site-nav" aria-label="Primary">
        <button id="menuToggle" class="hamburger" aria-expanded="false" aria-controls="siteMenu" aria-haspopup="true" aria-label="Open menu">
          <span class="hamburger-box"><span class="hamburger-inner"></span></span>
        </button>
        <div id="siteMenu" class="menu-dropdown" hidden role="menu" aria-label="Primary navigation">
          <a href="/" role="menuitem">Home</a>
          <a href="/menu/" role="menuitem">Bread Menu</a>
          <a href="/about/" role="menuitem">About</a>
          <a href="/where-to-find-us/" role="menuitem">Where To Find Us</a>
          <a href="/catering/" role="menuitem">Catering</a>
          <a href="/press/" role="menuitem">Press</a>
        </div>
      </nav>
    </div>
    {% if (page.url == "/" or page.url == "" or page.url == "/index.html") and hero %}
      <div class="home-header wrap">
        <div class="home-header-inner">
          <div class="hero-brand">
            <h1 class="logo" aria-label="Big Boy Bread">
              <span class="logo-line">BIG BOY</span>
              <span class="logo-line accent">BREAD</span>
            </h1>
            {% if tagline %}
              <p class="tagline">{{ tagline }}</p>
            {% endif %}
          </div>
        </div>
      </div>
    {% elif hero %}
      <div class="hero" role="img" aria-label="Collage-inspired hero banner">
        <div class="hero-copy">
          <h1 class="logo" aria-label="Big Boy Bread">
            <span class="logo-line">BIG BOY</span>
            <span class="logo-line accent">BREAD</span>
          </h1>
          {% if tagline %}
            <p class="tagline">{{ tagline }}</p>
          {% endif %}
        </div>
        <div class="hero-stickerwall" aria-hidden="true">
          <div class="sticker s1"><img src="/assets/uploads/image_512x683_100x133.png" alt="Sticker 1"></div>
          <div class="sticker s2"><img src="/assets/uploads/IMG_0137_512x683_100x133.jpeg" alt="Sticker 2"></div>
          <div class="sticker s3"><img src="/assets/uploads/IMG_3034_100x133.jpg" alt="Sticker 3"></div>
          <div class="sticker s4"><img src="/assets/uploads/IMG_3033_100x133.jpg" alt="Sticker 4"></div>
          <div class="sticker s5"><img src="/assets/uploads/IMG_3030_100x133.jpg" alt="Sticker 5"></div>
        </div>
      </div>
    {% endif %}
  </header>
  <main id="main" class="section">
    {% if (page.url == "/" or page.url == "" or page.url == "/index.html") and hero %}
      <div class="home-main wrap">
        <div class="hero-stickerwall home-stickerwall" aria-hidden="true">
          <div class="sticker s1"><img src="/assets/uploads/image_512x683_100x133.png" alt="Sticker 1"></div>
          <div class="sticker s2"><img src="/assets/uploads/IMG_0137_512x683_100x133.jpeg" alt="Sticker 2"></div>
          <div class="sticker s3"><img src="/assets/uploads/IMG_3034_100x133.jpg" alt="Sticker 3"></div>
          <div class="sticker s4"><img src="/assets/uploads/IMG_3033_100x133.jpg" alt="Sticker 4"></div>
          <div class="sticker s5"><img src="/assets/uploads/IMG_3030_100x133.jpg" alt="Sticker 5"></div>
        </div>
        <div class="page-content">{{ content | safe }}</div>
      </div>
    {% else %}
      <div class="wrap">{{ content | safe }}</div>
    {% endif %}
  </main>
  <footer class="site-footer" role="contentinfo">
    <div class="wrap">
      <p>© <span id="year"></span> Big Boy BREAD. All rights reserved.</p>
      <p class="footnote">Collage-forward vibe; no lyrics, logos, or proprietary artwork included.</p>
    </div>
  </footer>
  <script src="/assets/script.js" defer></script>
</body>
</html>
