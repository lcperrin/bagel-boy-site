---
pagination:
  data: menuFiles
  size: 1
  alias: category
permalink: "/menu/{{ category | slug }}/index.html"
layout: layouts/base.njk
title: "{{ category }}"
---

<div class="menu-container">
  <div class="menu-sidebar">
    <h2>{{ category | title }}</h2>
    <ul class="file-list">
      {% for item in menuFiles[category] %}
      <li>
        <a href="#" class="menu-link" data-images='[
          {% for img in item.images %}
            "/assets/uploads/menu/{{ category }}/{{ img }}"{% if not loop.last %},{% endif %}
          {% endfor %}
        ]'>
          {{ item.name | formatMenuLink }}
        </a>
      </li>
      {% endfor %}
    </ul>
    <div style="margin-top: 2rem;">
      <a href="/menu/">&larr; Back to Menu</a>
    </div>
  </div>

  <div class="menu-preview">
    <iframe name="preview-frame" id="preview-frame" src="" title="File Preview"></iframe>
    <div id="image-container" class="image-container" style="display:none;">
      <button id="prev-btn" class="nav-btn prev">&lt;</button>
      <img id="current-image" src="" alt="Menu item preview">
      <button id="next-btn" class="nav-btn next">&gt;</button>
      <div id="image-counter" class="image-counter"></div>
    </div>
    <div id="placeholder-message" class="placeholder-message">
      <p>Select an item to view</p>
    </div>
  </div>
</div>

<script>
  const links = document.querySelectorAll('.menu-link');
  const iframe = document.getElementById('preview-frame');
  const imageContainer = document.getElementById('image-container');
  const currentImage = document.getElementById('current-image');
  const placeholder = document.getElementById('placeholder-message');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const imageCounter = document.getElementById('image-counter');

  let currentImages = [];
  let currentIndex = 0;

  function showImage(index) {
    if (currentImages.length === 0) return;
    currentImage.src = currentImages[index];
    imageCounter.textContent = `${index + 1} / ${currentImages.length}`;
  }

  prevBtn.addEventListener('click', () => {
    currentIndex = (currentIndex - 1 + currentImages.length) % currentImages.length;
    showImage(currentIndex);
  });

  nextBtn.addEventListener('click', () => {
    currentIndex = (currentIndex + 1) % currentImages.length;
    showImage(currentIndex);
  });

  links.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      
      const imagesData = JSON.parse(link.getAttribute('data-images'));
      
      placeholder.style.display = 'none';

      if (imagesData.length > 0) {
        const firstIsImage = imagesData[0].match(/\.(jpeg|jpg|gif|png|webp|svg)$/i);
        
        if (firstIsImage) {
          iframe.style.display = 'none';
          imageContainer.style.display = 'flex';
          
          currentImages = imagesData;
          currentIndex = 0;
          showImage(0);

          if (currentImages.length > 1) {
            prevBtn.style.display = 'block';
            nextBtn.style.display = 'block';
            imageCounter.style.display = 'block';
          } else {
            prevBtn.style.display = 'none';
            nextBtn.style.display = 'none';
            imageCounter.style.display = 'none';
          }

        } else {
          // Fallback for PDFs
          imageContainer.style.display = 'none';
          iframe.style.display = 'block';
          iframe.src = imagesData[0];
        }
      }
    });
  });
</script>

<style>
  .menu-container {
    display: flex;
    gap: 20px;
    height: 80vh;
  }

  .menu-sidebar {
    flex: 1;
    min-width: 250px;
    overflow-y: auto;
    border-right: 1px solid #ccc;
    padding-right: 20px;
  }

  .menu-preview {
    flex: 3;
    background: #f9f9f9;
    border: 1px solid #ddd;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .image-container {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  #current-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0,0,0,0.5);
    color: white;
    border: none;
    padding: 10px 15px;
    font-size: 24px;
    cursor: pointer;
    border-radius: 5px;
    z-index: 10;
  }

  .nav-btn:hover {
    background: rgba(0,0,0,0.8);
  }

  .prev { left: 10px; }
  .next { right: 10px; }

  .image-counter {
    position: absolute;
    bottom: 10px;
    background: rgba(0,0,0,0.5);
    color: white;
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 14px;
  }

  #preview-frame {
    width: 100%;
    height: 100%;
    border: none;
    display: none; 
  }

  .placeholder-message {
    color: #666;
    font-size: 1.2rem;
  }

  .menu-link {
    display: block;
    padding: 8px 0;
    text-decoration: none;
    color: #333;
    border-bottom: 1px solid #eee;
  }

  .menu-link:hover {
    color: #000;
    font-weight: bold;
    background-color: #f0f0f0;
  }

  @media (max-width: 768px) {
    .menu-container {
      flex-direction: column;
      height: auto;
    }

    .menu-sidebar {
      flex: none;
      width: 100%;
      border-right: none;
      border-bottom: 1px solid #ccc;
      padding-bottom: 20px;
      padding-right: 0;
      max-height: 30vh;
    }

    .menu-preview {
      flex: none;
      width: 100%;
      height: 50vh;
    }
  }
</style>
